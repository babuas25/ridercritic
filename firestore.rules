rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions for role-based access control
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function getUserSubRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subRole;
    }
    
    function isAdmin() {
      return isAuthenticated() && (getUserRole() == 'Super Admin' || getUserRole() == 'Admin');
    }
    
    function isSuperAdmin() {
      return isAuthenticated() && getUserRole() == 'Super Admin';
    }
    
    function canWriteReviews() {
      return isAuthenticated() && (getUserSubRole() == 'CriticStar' || getUserSubRole() == 'CriticMaster');
    }
    
    function canModerate() {
      return isAuthenticated() && getUserSubRole() == 'CriticMaster';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile (except role/subRole)
      allow update: if isAuthenticated() && request.auth.uid == userId 
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'subRole']);
      
      // Only Super Admin can create users or modify roles
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin();
      allow delete: if isSuperAdmin();
      
      // Admins can read all users
      allow read: if isAdmin();
    }
    
    // Motorcycles collection
    match /motorcycles/{motorcycleId} {
      // Public read access for published motorcycles
      allow read: if true;
      
      // Allow all writes for development
      allow create, update, delete: if true;
    }
    
    // Motorcycle drafts collection
    match /motorcycle_drafts/{draftId} {
      // Allow all reads and writes for development
      allow read, write: if true;
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      // Anyone can read published reviews
      allow read: if true;
      
      // Allow all writes for development - this should fix the permission issue
      allow create, update, delete: if true;
    }
    
    // Comments collection
    match /comments/{commentId} {
      // Anyone can read comments
      allow read: if true;
      
      // Allow all writes for development
      allow create, update, delete: if true;
    }
    
    // Comments collection (nested under reviews) - for backward compatibility
    match /reviews/{reviewId}/comments/{commentId} {
      // Anyone can read comments
      allow read: if true;
      
      // Allow all writes for development
      allow create, update, delete: if true;
    }
    
    // Brands collection
    match /brands/{brandId} {
      // Public read
      allow read: if true;
      
      // Allow all writes for development
      allow write: if true;
    }
    
    // Categories collection
    match /categories/{categoryId} {
      // Public read
      allow read: if true;
      
      // Allow all writes for development
      allow write: if true;
    }
    
    // Types collection (motorcycle types/categories)
    match /types/{typeId} {
      // Public read
      allow read: if true;
      
      // Allow all writes for development
      allow write: if true;
    }
    
    // User activity logs
    match /activity_logs/{logId} {
      // Allow all reads and writes for development
      allow read, write: if true;
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Allow all reads and writes for development
      allow read, write: if true;
    }
    
    // Settings collection (global app settings)
    match /settings/{settingId} {
      // Public read for certain settings
      allow read: if true;
      
      // Allow all writes for development
      allow write: if true;
    }
    
    // Default: deny all other access (but we're being permissive for development)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}